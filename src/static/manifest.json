{
  "name": "PomodoroGo",
  "description": "Pomodoro TImer and Web Site Blocker Chrome Extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {

    "default_title": "PomodoroGo",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "tabs"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
